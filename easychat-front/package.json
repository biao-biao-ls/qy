{
  "name": "JLCONE",
  "version": "1.0.13",
  "description": "JLCONE - Modern Electron Desktop Application",
  "main": "./out/main/index.js",
  "author": "Jialichuang(Hong Kong) co., Limited",
  "homepage": "https://www.jlcpcb.com",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "cross-env NODE_ENV=development electron-vite dev",
    "build": "npm run typecheck && cross-env NODE_ENV=production electron-vite build",
    "build:dev": "cross-env NODE_ENV=development electron-vite build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer out/renderer",
    "clean": "rimraf out dist",
    "prebuild": "npm run clean",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "package:win32": "npm run build && electron-builder --win --ia32",
    "package:win64": "npm run build && electron-builder --win --x64",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:mac-arm64": "npm run build && electron-builder --mac --arm64",
    "package:mac-intel": "npm run build && electron-builder --mac --x64",
    "package:linux": "npm run build && electron-builder --linux",
    "package:linux-appimage": "npm run build && electron-builder --linux --target AppImage",
    "package:linux-deb": "npm run build && electron-builder --linux --target deb",
    "package:linux-rpm": "npm run build && electron-builder --linux --target rpm",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "dist": "npm run package:all",
    "dist:dir": "npm run build:unpack",
    "dev:tools": "node scripts/dev-tools.js",
    "dev:monitor": "node scripts/dev-monitor.js",
    "dev:debug": "cross-env NODE_ENV=development ELECTRON_IS_DEV=1 electron-vite dev --inspect",
    "dev:clean": "npm run clean && npm run dev",
    "check": "npm run typecheck && npm run lint",
    "check:quick": "node scripts/quality-check.js quick",
    "check:all": "node scripts/quality-check.js all",
    "fix": "npm run format && eslint --fix .",
    "fix:auto": "node scripts/quality-check.js fix",
    "analyze": "npm run build:analyze",
    "report": "node scripts/quality-report.js",
    "prepare": "husky install",
    "prepare": "husky"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "crypto-js": "^4.2.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "getmac": "^6.6.0",
    "log4js": "^6.9.1",
    "os-utils": "0.0.14",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "systeminformation": "^5.23.5",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron/notarize": "^2.5.0",
    "@types/crypto-js": "^4.2.2",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.18.10",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "terser": "^5.36.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  },
  "build": {
    "productName": "JLCONE",
    "appId": "com.jlcpcb.www",
    "copyright": "Jialichuang(Hong Kong) co., Limited",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "!out/renderer/assets/**/*.map",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraFiles": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*",
          "!**/*.md"
        ]
      }
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/jlcAssistant256.ico",
      "uninstallerIcon": "resources/jlcAssistant256.ico",
      "installerHeaderIcon": "resources/jlcAssistant256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JLCONE",
      "include": "build/installer.nsh",
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "installerLanguages": [
        "en_US",
        "zh_CN"
      ],
      "language": "2052"
    },
    "win": {
      "icon": "resources/jlcAssistant256.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Jialichuang(Hong Kong) co., Limited",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "title": "${productName} ${version}",
      "icon": "resources/YourAppIcon.icns",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 380
      },
      "backgroundColor": "#ffffff"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/YourAppIcon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/jlcAssistant512.png",
      "category": "Development",
      "synopsis": "JLCONE - Modern Electron Desktop Application",
      "description": "A modern desktop application built with Electron, React, and Vite",
      "desktop": {
        "Name": "JLCONE",
        "Comment": "Modern Electron Desktop Application",
        "Categories": "Development;Utility;"
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://test-static.jlcpcb.com/app_version/package/windows",
        "useMultipleRangeRequest": false,
        "channel": "latest"
      },
      {
        "provider": "generic",
        "url": "https://test-static.jlcpcb.com/app_version/package/mac/intel",
        "useMultipleRangeRequest": false,
        "channel": "latest"
      },
      {
        "provider": "generic",
        "url": "https://test-static.jlcpcb.com/app_version/package/mac/arm",
        "useMultipleRangeRequest": false,
        "channel": "latest"
      }
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "beforeBuild": "scripts/beforeBuild.js",
    "afterSign": "scripts/notarize.js",
    "afterPack": "scripts/afterPack.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
